{
  "name": "Firmware",
  "replaceOnPUT": false,
  "base": "PersistedModel",
  "strictDelete": true,
  "idInjection": true,
  "options": {
    "strict":"filter"
  },
  "mixins": {
    "DisableCommon": true,
    "TimeStamps": {
      "required": false,
      "validateUpsert": true
    }
  },
  "hidden": [
    "releaseLevel"
  ],
  "properties": {
    "version": {
      "type": "string",
      "required": true
    },
    "supportedHardwareVersions": {
      "type": "array",
      "required": true
    },
    "minimumAppVersion": {
      "type": "string",
      "required": true
    },
    "minimumCompatibleVersion": {
      "type": "string"
    },
    "dependsOnFirmwareVersion": {
      "type": "string"
    },
    "dependsOnBootloaderVersion": {
      "type": "string",
      "required": true
    },
    "downloadUrl": {
      "type": "string",
      "required": true
    },
    "sha1hash": {
      "type": "string",
      "required": true
    },
    "releaseNotes": {
      "en" : "string",
      "nl" : "string",
      "de" : "string",
      "es" : "string",
      "it" : "string",
      "fr" : "string"
    },
    "releaseLevel": {
      "type": "number",
      "required": true
    }
  },
  "acls": [],
  "methods": {}
}
