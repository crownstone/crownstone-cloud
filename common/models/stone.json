{
  "name": "Stone",
  "replaceOnPUT": false,
  "base": "PersistedModel",
  "strictDelete": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strict":"filter"
  },
  "mixins": {
    "DisableCommon": true,
    "SphereContent": true,
    "EnableHooks": true,
    "ChangeTracker": false,
    "Cascade": {
      "StoneLocation": "stoneId",
      "StoneLocation": "sphereId",
      "StoneKeys": "stoneId"
    },
    "TimeStamps": {
      "required": false,
      "validateUpsert": true
    },
    "Util": true
  },
  "hidden": [
    "addedBySubProject"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "deviceType": {
      "type": "string"
    },
    "major": {
      "type": "number"
    },
    "minor": {
      "type": "number"
    },
    "uid": {
      "type": "number"
    },
    "icon": {
      "type": "string"
    },
    "lastSeenAt": {
      "type": "date"
    },
    "firmwareVersion": {
      "type": "string"
    },
    "bootloaderVersion": {
      "type": "string"
    },
    "hardwareVersion": {
      "type": "string"
    },
    "hidden": {
      "type": "boolean"
    },
    "locked": {
      "type": "boolean"
    },
    "addedBySubProject": {
      "type":"boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "location": {
      "type": "belongsTo",
      "model": "Location",
      "foreignKey": "locationId"
    },
    "locations": {
      "type": "hasAndBelongsToMany",
      "model": "Location",
      "foreignKey": "stoneId",
      "through": "StoneLocation"
    },
    "energyUsage": {
      "type": "hasMany",
      "model": "EnergyUsage",
      "foreignKey": "stoneId"
    },
    "currentSwitchState": {
      "type": "belongsTo",
      "model": "SwitchState",
      "foreignKey": "currentSwitchStateId"
    },
    "switchStateHistory": {
      "type": "hasMany",
      "model": "SwitchState",
      "foreignKey": "stoneId"
    },
    "abilities": {
      "type": "hasMany",
      "model": "StoneAbility",
      "foreignKey": "stoneId"
    },
    "behaviours": {
      "type": "hasMany",
      "model": "StoneBehaviour",
      "foreignKey": "stoneId"
    }
  },
  "acls": [],
  "methods": {}
}
