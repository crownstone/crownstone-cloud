{
  "name": "user",
  "replaceOnPUT": false,
  "base": "User",
  "strictDelete": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strict":"filter"
  },
  "mixins": {
    "DisableCommon": true,
    "ChangeTracker": false,
    "Cascade": {
      "SphereAccess": "userId"
    },
    "TimeStamps": {
      "required": false,
      "validateUpsert": true
    },
    "Util": true
  },
  "hidden": [
    "earlyAccessLevel",
    "accountCreationPending"
  ],
  "properties": {
    "profilePicId": {
      "type": "string"
    },
    "accountCreationPending": {
      "type": "boolean",
      "default": false
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "new": {
      "type": "boolean",
      "default": true
    },
    "uploadLocation": {
      "type": "boolean",
      "default": false
    },
    "uploadSwitchState": {
      "type": "boolean",
      "default": false
    },
    "uploadDeviceDetails": {
      "type": "boolean",
      "default": true
    },
    "language": {
      "type": "string",
      "default": "en_us"
    },
    "earlyAccessLevel": {
      "type": "number",
      "default": 0,
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "devices": {
      "type": "hasMany",
      "model": "Device",
      "foreignKey": "ownerId"
    },
    "hooks": {
      "type": "hasMany",
      "model": "Hook",
      "foreignKey": "ownerId"
    },
    "spheres": {
      "type": "hasMany",
      "model": "Sphere",
      "foreignKey": "userId",
      "through": "SphereAccess"
    },
    "installations": {
      "type": "hasMany",
      "model": "AppInstallation",
      "foreignKey": "ownerId",
      "through": "Device"
    },
    "messages": {
      "type": "hasAndBelongsToMany",
      "model": "Message",
      "foreignKey": "userId",
      "through": "MessageUser"
    },
    "ownedMessages": {
      "type": "hasMany",
      "model": "Message",
      "foreignKey": "ownerId"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "CrownstoneAccessToken",
      "polymorphic": {
        "foreignKey": "userId",
        "discriminator": "principalType"
      },
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
